<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="template_book_card">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <t t-foreach="docs" t-as="book">
                        <div class="oe_structure"/>
                        <h2 class="mt-4">Book Card: <span t-field="book.name"/></h2>

                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>Author:</strong>
                                <p t-field="book.author_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Publication Date:</strong>
                                <p t-field="book.publication_date"/>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <strong>State:</strong>
                                <p t-field="book.state"/>
                            </div>
                            <div class="col-6">
                                <strong>Age (years):</strong>
                                <p t-field="book.age"/>
                            </div>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>