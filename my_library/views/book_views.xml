<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_libro_tree" model="ir.ui.view">
        <field name="name">library.book.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree string="Books">
                <field name="name"/>
                <field name="publication_date"/>
                 <field name="author_id"/>
                <field name="age"/>
            </tree>
        </field>
    </record>

    <record id="view_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Book">
                <!-- The header is the ideal place for status fields and buttons -->
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="available,borrowed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="author_id"/>
                            <field name="publication_date"/>
                        </group>
                        <group>
                            <field name="age"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Book
            </p>
        </field>
    </record>

    <menuitem id="menu_library_root"
              name="My Library"
              sequence="10"/>

    <menuitem id="menu_books"
              name="Books"
              parent="menu_library_root"
              action="action_book"
              sequence="10"/>
</odoo>