<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_author_tree" model="ir.ui.view">
        <field name="name">library.author.tree</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <tree string="Authors">
                <field name="name"/>
                <field name="birth_date"/>
            </tree>
        </field>
    </record>

    <record id="view_author_form" model="ir.ui.view">
        <field name="name">library.author.form</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <form string="Author">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="birth_date"/>
                    </group>
                    <notebook>
                        <page string="Books">
                            <field name="book_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_author" model="ir.actions.act_window">
        <field name="name">Authors</field>
        <field name="res_model">library.author</field>
        <field name="view_mode">tree,kanban</field>
    </record>

    <menuitem id="menu_authors"
              name="Authors"
              parent="menu_library_root" action="action_author"
              sequence="20"/> </odoo>