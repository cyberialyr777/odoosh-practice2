<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_library" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.library</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='email']" position="attributes">
                <attribute name="required">1</attribute>
                <attribute name="placeholder">example@email.com</attribute>
            </xpath>

            <xpath expr="//field[@name='name']" position="before">
                <field name="title"/>
            </xpath>

            <xpath expr="//field[@name='function']" position="replace">
                <field name="job_position_selection"/>
            </xpath>

            <xpath expr="//field[@name='vat']" position="after">
                <field name="is_book_lover"/>
            </xpath>
            <xpath expr="//field[@name='phone']" position="after">
                <field name="last_contact_date"/>
            </xpath>

            <xpath expr="//notebook/page[@name='sales_purchases']" position="inside">
                <group string="Internal Notes">
                    <field name="comment"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>